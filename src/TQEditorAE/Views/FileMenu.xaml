<UserControl x:Class="TQEditorAE.Views.FileMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:local="clr-namespace:TQEditorAE.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Margin="2">
                <MenuItem Header="{Binding FileMenuName}">
                    <MenuItem Header="{Binding OptionsMenuName}" Command="{Binding OpenOptionsDialogCommand}" />
                    <Separator />
                    <MenuItem Header="{Binding ExitMenuName}" />
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
